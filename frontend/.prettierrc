{
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "singleAttributePerLine": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "printWidth": 80,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.{cmp,page}",
      "options": { "parser": "html" }
    },
    {
      "files": "*.svg",
      "options": { "parser": "html" }
    }
  ]
}
